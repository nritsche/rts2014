#include <stdlib.h>
#include <stdio.h>
#include <unistd.h>
#include <errno.h>
#include <string.h>
#include <fcntl.h>
#include <sys/dispatch.h>
#include <sys/mman.h>

struct pid_data{
	pthread_mutex_t pid_mutex;
	pid_t pid;
};

int main(int argc, char *argv[]) {
	printf("Welcome to the QNX Momentics IDE\n");

	pthread_mutexattr_t myattr;

	//create shared mem object
	int f = shm_open("dev/shmem", O_RDRW | O_CREAT, S_IRWXU);
	ftruncate(f, sizeof(struct pid_data));
	struct pid_data *share = mmap(0, sizeof(struct pid_data), PROT_READ | PROT_WRITE, MAP_SHARED, f, 0);

	share.pid = getpid();

	pthread_mutexattr_init(&myattr);
	pthread_mutexattr_setpshared(&myattr, PTHREAD_PROCESS_SHARED);
	pthread_mutex_init(&ptr->pid_mutex, &myattr);

	while(1);

	return EXIT_SUCCESS;
}
